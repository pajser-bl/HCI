<Window x:Class="HCI.UI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI.UI"
        mc:Ignorable="d"
        Title="{DynamicResource adminwindow}" Height="450" Width="800">
        <!--d:DesignHeight="300" d:DesignWidth="700">-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0"  Grid.Row="0" Text="{DynamicResource username}" VerticalAlignment="Center" 

                         Margin="2,2,16,4"  />
        <TextBox x:Name="UsernameSearch"  Grid.Column="1"  Grid.Row="0" Width="220" HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="2,2,5,4" 
                         Text="{Binding UsernameSearch, Mode=TwoWay}" />
    </Grid>
</Window>
